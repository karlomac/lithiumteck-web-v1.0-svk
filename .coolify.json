{
  "name": "lithiumteck-web",
  "type": "dockerfile",
  "dockerfile": "Dockerfile",
  "buildContext": ".",
  "port": 3000,
  "healthcheck": {
    "enabled": true,
    "path": "/",
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "startPeriod": 40
  },
  "environment": {
    "required": [
      "POCKETBASE_URL",
      "PUBLIC_SITE_URL",
      "PUBLIC_SITE_NAME"
    ],
    "optional": [
      "POCKETBASE_GOOGLE_CLIENT_ID",
      "POCKETBASE_GOOGLE_CLIENT_SECRET",
      "POCKETBASE_GITHUB_CLIENT_ID",
      "POCKETBASE_GITHUB_CLIENT_SECRET",
      "PUBLIC_SITE_DESCRIPTION"
    ]
  },
  "build": {
    "nodeVersion": "20",
    "packageManager": "pnpm"
  },
  "restart": "unless-stopped"
}
